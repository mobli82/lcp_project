#:include boilermonitor.kv
#:include cwucycle.kv
#:include rralgorythm.kv

MainView:

<MainView>:
    orientation: "vertical"
    MDBoxLayout:
        size_hint_y: .07
        MDLabel:
            text: " "
            id: server_response
            text_size: self.size
            theme_text_color: "Custom"
            text_color: 0, 1, 0, 1
            halign: 'center'

    MDBottomNavigation:
        # color settings

        MDBottomNavigationItem:
            name: "Boiler Monitor"
            text: "Monitor"
            icon: "chart-line"

            BoilerMonitorView:

        MDBottomNavigationItem:
            name: "rr_algo"
            text: "RR ALGO"
            icon: "cog-counterclockwise"

            #RR Algorythm
            MDGridLayout:
                cols: 3
                RRalgorythmView:

        MDBottomNavigationItem:
            name: "boiler"
            text: "Boiler"
            icon: "cog-transfer-outline"

            MDLabel:
                text: "boiler"
                halign: 'center'

        MDBottomNavigationItem:
            name: "cwu"
            text: "cwu-cycle"
            icon: "shower"

            CwuCycleView:

        MDBottomNavigationItem:
            name: "settings"
            text: "Settings"
            icon: "cog"

            MDLabel:
                text: "SETTINGS"
                halign: 'center'